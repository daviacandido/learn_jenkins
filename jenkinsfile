pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git(
                    branch: 'main', 
                    url: 'https://github.com/daviacandido/learn_jenkins'
                )
            }
        }
        stage('Test') {
            steps {
                sh '''
                python3 -m venv venv
                . venv/bin/activate
                pip install -r requirements.txt
                pip install selenium
                pip install flake8
                pytest
                '''
            }
        }
        stage('Análise Estática'){
            steps{
                sh '''
                . venv/bin/activate
                flake8 --ignore=W291,W293,W391 ./*.py|| true
                '''
            }
        }
    }
}

